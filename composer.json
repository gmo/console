{
	"name": "gmo/console",
	"description": "A library that eases the creation of beautiful and testable command line interfaces",
	"require": {
		"gmo/common": "~1.22",
		"gmo/dependency-injection": "~1.0",
		"php": ">=5.3",
		"symfony/console": "~2.5"
	},
	"require-dev": {
		"silex/silex": "^1.0",
		"sorien/silex-pimple-dumper": "^1.0",
		"stecman/symfony-console-completion": "~0.4"
	},
	"autoload": {
		"psr-4": {
			"GMO\\Console\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "2.2-dev"
		}
	},
	"repositories": [
		{ "type": "composer", "url": "composer.gmodev.com" }
	]
}
